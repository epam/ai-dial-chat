{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./",
    "paths": {
      "@epam/ai-dial-overlay": ["libs/overlay/src/index.ts"],
      "@epam/ai-dial-shared": ["libs/shared/src/index.ts"],
      "@epam/ai-dial-visualizer-connector": [
        "libs/visualizer-connector/src/index.ts",
      ],
      "@epam/ai-dial-chat-visualizer-connector": [
        "libs/chat-visualizer-connector/src/index.ts",
      ],
      "@epam/ai-dial-modulify-ui": ["libs/modulify-ui/src/index.ts"]
    },
  },
  "exclude": ["node_modules", "src/**/*.spec.ts", "src/**/*.test.ts"],
}
