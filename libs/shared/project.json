{
  "name": "shared",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/shared/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/rollup:rollup",
      "options": {
        "outputPath": "dist/libs/shared",
        "main": "libs/shared/src/index.ts",
        "tsConfig": "libs/shared/tsconfig.lib.json",
        "project": "libs/shared/package.json",
        "compiler": "tsc",
        "format": ["esm"],
        "assets": [
          {
            "glob": "libs/shared/README.md",
            "input": ".",
            "output": "."
          },
          {
            "glob": ".gitignore",
            "input": ".",
            "output": "."
          },
          {
            "glob": "LICENSE",
            "input": ".",
            "output": "."
          }
        ],
        "buildableProjectDepsInPackageJsonType": true
      }
    },
    "publish": {
      "command": "node tools/publish-lib.mjs shared --version={args.ver} --dry={args.dry} --tag={args.tag} --development={args.development}"
    },
    "lint": {
      "options": {
        "format": "html",
        "outputFile": "reports/eslint/libs/shared/eslint-report.html"
      }
    },
    "lint:fix": {
      "options": {
        "format": "html",
        "outputFile": "reports/eslint/libs/shared/eslint-report.html"
      }
    },
    "test": {
      "options": {
        "reportsDirectory": "../../reports/coverage/libs/shared"
      }
    },
    "test:watch": {
      "options": {
        "reportsDirectory": "../../reports/coverage/libs/shared"
      }
    },
    "test:coverage": {
      "options": {
        "reportsDirectory": "../../reports/coverage/libs/shared"
      }
    },
    "format": {},
    "format:fix": {}
  },
  "tags": []
}
